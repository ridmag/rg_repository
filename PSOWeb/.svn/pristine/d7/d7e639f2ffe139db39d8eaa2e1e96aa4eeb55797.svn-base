<table width="100%"
	style="border-collapse: collapse; margin-bottom: 5px; font-size: 8"
	border="1">
	<tr style="background-color: #BDBDBD">
		<th colspan="3" valign="middle">Event Date</th>
		<th colspan="6" valign="middle">Program(s)</th>
		<th colspan="2" valign="middle">Attended</th>
		<th colspan="2" valign="middle">Program Charges</th>
