	</tr>

	<!--  #foreach ( $item.eventDate in $invoice.tmpItems ) 
  	 #set ( $rowCount1 = 0 )
     $eventDate = ($item.eventDate)$dateFormat.format($item.eventDate)
	 #set ( $rowCount1 = $rowCount1 + 1 )
	 #end
	-->
	#foreach($item in $invoice.tmpItems)
	<tr>
		<td colspan="3" align="center" rowspan="$rowCount1">
			#if($item.eventDate)$dateFormat.format($item.eventDate)#end</td>
		<td colspan="6" align="left">#if($item.groups)$item.groups #end
			#if($item.groupname)$item.groupname #end</td>
		<td colspan="2" align="center">#if($item.attended) Yes #end
			#if(!$item.attended) No #end</td>
		<td colspan="2" align="center">#if($item.chargeAmount !=
			0)$myFormatter.format($item.chargeAmount) #end</td>
		<td colspan="2" align="center">#if($item.transportCharge !=
			0)$myFormatter.format($item.transportCharge) #end</td>
		<td colspan="2" align="center">#if($item.paidAmount !=
			0)$myFormatter.format($item.paidAmount) #end</td>
	</tr>
	#end
</table>
