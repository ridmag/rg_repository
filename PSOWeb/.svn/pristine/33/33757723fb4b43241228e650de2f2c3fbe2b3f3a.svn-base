<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="Deploy From Eclipse to Tomcat" basedir="." default="deploy">
	<property name="warfile" value="NDIS" />
	<property name="tomcat_home" value="/data/devtools/tomcat-7.0.26/" />

	<property name="appDeployDir" value="target">
	</property>
	<path id="class.path">
		<fileset dir="libs">
			<include name="**/*.jar" />
			<include name="**/*.zip" />
		</fileset>
		<fileset dir="WebContent/WEB-INF/lib">
			<include name="**/*.jar" />
			<include name="**/*.zip" />
		</fileset>
		<fileset dir="${tomcat_home}/lib">
			<include name="**/*.jar" />
			<include name="**/*.zip" />
		</fileset>
	</path>
	<target name="clean">
		<echo message="Removing old directory structure..." />
		<delete dir="build/classes">
		</delete>
		<delete dir=".">
			<filename name="NDIS.war" />
		</delete>
	</target>
	<target name="mkDeployDir" depends="clean">
		<mkdir dir="WEB-INF/classes" />
		<mkdir dir="build/classes" />
	</target>
	<target name="compile" depends="mkDeployDir">
		<echo message="Compiling MY_APP ..." />
		<javac source="1.7" target="1.7" classpathref="class.path" srcdir="src" destdir="build/classes" />
		<copy todir="build/classes">
			<fileset dir="src">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>
	<target name="unpack">
		<unwar src="${warfile}.war" dest="${warfile}" />
	</target>
	<target name="create" depends="compile">
		<war destfile="${warfile}.war" webxml="WebContent/WEB-INF/web.xml" update="false">
			<classes dir="build\classes" />
			<fileset dir="WebContent">
				<exclude name="WEB-INF/web.xml" />
			</fileset>
			<fileset dir="src">
				<include name="META-INF/**" />
			</fileset>

		</war>
	</target>
	<target name="copy" depends="clean-old-version">
		<copy todir="${tomcat_home}/webapps" overwrite="true">
			<fileset dir=".">
				<include name="*.war" />
			</fileset>
		</copy>
	</target>
	<target name="clean-old-version">
		<echo message="Removing old war file and directory..." />
		<delete file="${tomcat_home}/webapps/NDIS.war">
		</delete>
		<delete dir="${tomcat_home}/webapps/NDIS">
		</delete>
	</target>
