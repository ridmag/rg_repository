<%@page isErrorPage="true"%>
<html>
<head>
<title>System error detected. if the problem persists, contact
	the administrator.</title>
<link rel="stylesheet" type="text/css" href="css/login_styles.css" />
<style>
#msg {
	color: white;
}

#msg a {
	color: white;
}

#error{
color:yellow;

width: 400px;
border: 1px solid yellow;
padding: 5px;
}
</style>
</head>
<body>
	<div id="wrapper">
		<div id="msg">
			<h1>General System Error</h1>
			<p>System error detected. If the problem persists, contact the
				administrator.</p>
			<a href=".">Try again</a>
		</div>
		<div id="error">
			<%
				out.print(exception.getMessage());
			%>
			}
		</div>
	</div>
</body>
</html>