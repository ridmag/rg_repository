package com.itelasoft.pso.services;

import java.util.Date;
import java.util.List;

import com.itelasoft.pso.beans.NdisAncillaryCost;
import com.itelasoft.pso.beans.NdisCommittedEvent;
import com.itelasoft.pso.beans.NdisInvoiceItem;
import com.itelasoft.pso.dao.INdisInvoiceDao;

public class NdisInvoiceService extends GenericService<NdisInvoiceItem, Long>
		implements INdisInvoiceService {

	public INdisInvoiceDao ndisInvoiceDao;

	@Override
	public NdisInvoiceItem getInvoice(String name) {
		return ndisInvoiceDao.getInvoice(name);
	}

	public INdisInvoiceDao getNdisInvoiceDao() {
		return ndisInvoiceDao;
	}

	public void setNdisInvoiceDao(INdisInvoiceDao ndisInvoiceDao) {
		this.ndisInvoiceDao = ndisInvoiceDao;
	}

	public List<NdisCommittedEvent> retrieveInvoiceItem(Date startDate,
			Date endDate, Long studentId) {
		return ((INdisInvoiceDao) dao).retrieveInvoiceItem(startDate, endDate,
				studentId);
	}
	
	public List<NdisAncillaryCost> retrieveNdisAncillaryCostItems(Date startDate,
			Date endDate, Long studentId,Boolean claimed) {
		return ((INdisInvoiceDao) dao).retrieveNdisAncillaryCostItems(startDate, endDate,
				studentId,claimed);
	}
	
	public List<NdisAncillaryCost> allretrieveNdisAncillaryCostItems(Long studentId) {
		return ((INdisInvoiceDao) dao).allretrieveNdisAncillaryCostItems(studentId);
	}
}
